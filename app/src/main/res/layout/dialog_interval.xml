<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="mainViewModel"
            type="com.anshmidt.multialarm.viewmodel.MainViewModel" />
        <variable
            name="minutesBetweenAlarmsViewModel"
            type="com.anshmidt.multialarm.viewmodel.MinutesBetweenAlarmsViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/textview_numberdialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/interval_dialog_title"
            android:layout_margin="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/mainTextColor"
            />

        <EditText
            android:id="@+id/edittext_intervaldialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="40sp"
            android:textColor="@color/mainTextColor"
            android:layout_margin="10dp"
            style="@style/Widget.AppCompat.EditText"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_numberdialog_title"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:imeOptions="flagNoExtractUi"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textview_intervaldialog_minutes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/all_minutes"
            android:textSize="20sp"
            android:textColor="@color/mainTextColor"
            android:layout_marginStart="25dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/edittext_intervaldialog"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/edittext_intervaldialog"
            android:visibility="gone"/>

        <NumberPicker
            android:id="@+id/numberpicker_intervaldialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:theme="@style/NumberPicker"
            app:layout_constraintTop_toBottomOf="@id/textview_numberdialog_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:value="@{minutesBetweenAlarmsViewModel.minutesBetweenAlarmsVariantIndex}"
            android:onValueChange="@{(picker, oldValueIndex, newValueIndex) -> minutesBetweenAlarmsViewModel.onMinutesBetweenAlarmsChangedByUser(newValueIndex)}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>