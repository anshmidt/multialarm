<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="mainViewModel"
            type="com.anshmidt.multialarm.viewmodel.MainViewModel" />
    </data>

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:listDivider"
            android:focusableInTouchMode="true"
            app:layout_constraintBottom_toBottomOf="@+id/textview_main_firstalarm_time"
            app:layout_constraintTop_toBottomOf="@+id/textview_main_firstalarm_time"
            tools:context="com.anshmidt.multialarm.activities.MainActivity">

            <!--Nested ConstraintLayouts are used in order to make parts of the screen clickable-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_switch_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_main_alarmslist"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/margin_main_activity"
                    android:divider="@null"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="51dp"
                    android:layout_marginEnd="54dp"
                    android:layout_marginBottom="52dp"
                    android:elevation="0dp"
                    android:scaleX="2"
                    android:scaleY="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:checked="@={mainViewModel.alarmSwitchState}"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider_1"
                style="@style/MainScreenDividerTheme"
                app:layout_constraintTop_toBottomOf="@id/layout_switch_main"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_first_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> mainViewModel.onFirstAlarmTimeClicked()}"
                app:layout_constraintTop_toBottomOf="@id/divider_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textview_main_firstalarm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_main_activity"
                    android:textColor="@color/mainTextColor"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:fullText="@{String.format(@string/main_firstalarm_time, mainViewModel.getFirstAlarmTimeDisplayable())}"
                    app:partOfTextToResize="@{mainViewModel.getFirstAlarmTimeDisplayable()}"/>

                <TextView
                    android:id="@+id/textview_main_timeleft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_main_activity"
                    android:text="@string/all_time_left"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview_main_firstalarm_time"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider_2"
                style="@style/MainScreenDividerTheme"
                app:layout_constraintTop_toBottomOf="@id/layout_first_alarm"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/divider_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textview_main_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_main_activity"
                    android:textColor="@color/mainTextColor"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:fullText="@{String.format(@string/main_interval, Integer.toString(mainViewModel.minutesBetweenAlarms))}"
                    app:partOfTextToResize="@{Integer.toString(mainViewModel.minutesBetweenAlarms)}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/divider_3"
                style="@style/MainScreenDividerTheme"
                app:layout_constraintTop_toBottomOf="@id/layout_interval"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_numberofalarms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/divider_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textview_main_numberofalarms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_main_activity"
                    android:textColor="@color/mainTextColor"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:fullText="@{@plurals/main_number_of_alarms(mainViewModel.numberOfAlarms,mainViewModel.numberOfAlarms)}"
                    app:partOfTextToResize="@{Integer.toString(mainViewModel.numberOfAlarms)}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
