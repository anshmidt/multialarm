<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
    <variable
        name="firstAlarmTimeViewModel"
        type="com.anshmidt.multialarm.viewmodel.FirstAlarmTimeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> firstAlarmTimeViewModel.onFirstAlarmTimeClicked()}">

        <TextView
            android:id="@+id/textview_main_firstalarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_main_activity"
            android:textColor="@color/mainTextColor"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:fullText="@{String.format(@string/main_firstalarm_time, firstAlarmTimeViewModel.firstAlarmTimeDisplayable)}"
            app:partOfTextToResize="@{firstAlarmTimeViewModel.firstAlarmTimeDisplayable}"/>

        <TextView
            android:id="@+id/textview_main_timeleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_main_activity"
            android:text="@{@string/all_time_left(firstAlarmTimeViewModel.timeLeftHours, firstAlarmTimeViewModel.timeLeftMinutesPart)}"
            android:textColor="@color/primary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_main_firstalarm_time"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>